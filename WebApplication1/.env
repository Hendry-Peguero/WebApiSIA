# ==============================================
# ENVIRONMENT CONFIGURATION
# ==============================================
ASPNETCORE_ENVIRONMENT=Development

# ==============================================
# SERVER CONFIGURATION
# ==============================================
# Puerto principal donde se levantará la API
PORT=5037
# Puerto HTTPS (solo en producción con certificados SSL)
HTTPS_PORT=7242
# Host permitido (0.0.0.0 para producción, localhost para desarrollo)
HOST=localhost
# URLs completas (se construyen automáticamente desde PORT y HTTPS_PORT)
ASPNETCORE_URLS=http://localhost:5037;https://localhost:7242

# ==============================================
# DATABASE
# ==============================================
CONNECTION_STRING=Server=(localdb)\MSSQLLocalDB;Database=InventorySIA;Trusted_Connection=True;TrustServerCertificate=True;MultipleActiveResultSets=true

# ==============================================
# JWT AUTHENTICATION
# ==============================================
# Clave secreta para firmar tokens JWT (mínimo 32 caracteres)
# ⚠️ CAMBIAR EN PRODUCCIÓN - Usar clave aleatoria y segura
JWT_SECRET=ClaveSuperSecreta_LARGA_1234567890!!!_PRODUCTION_KEY_2025
# Retrocompatibilidad con configuración anterior
JWT_KEY=ClaveSuperSecreta_LARGA_1234567890!!!
JWT_ISSUER=WebApiSIA
JWT_AUDIENCE=WebApiSIA
JWT_EXPIRE_MINUTES=60

# ==============================================
# CORS
# ==============================================
# Orígenes permitidos separados por coma
CORS_ALLOWED_ORIGINS=http://localhost:5175,http://localhost:5176

# ==============================================
# RATE LIMITING
# ==============================================
# Límite de peticiones al endpoint de barcode por minuto por IP
RATE_LIMIT_BARCODE_REQUESTS=100
# Tiempo de bloqueo en minutos tras exceder el límite
RATE_LIMIT_BARCODE_BLOCK_MINUTES=5
